= form_for @exercise, :remote => true do |f|
  - if @exercise.errors.any?
    #error_explanation
      %h2= "#{pluralize(@exercise.errors.count, "error")} prohibited this exercise from being saved:"
      %ul
        - @exercise.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :activity
    = f.text_field :activity
  .field
    = f.label :value
    = f.text_field :value
  .field
    = f.label :units
    = f.text_field :units
  .field
    = f.label :completed
    = f.text_field :completed
  .field
    = f.hidden_field :user_id, value: current_user.id
  .actions
    = f.submit 'Save'
